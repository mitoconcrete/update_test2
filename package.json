{
  "name": "electron-update",
  "version": "1.0.1",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electrion-builder --dir",
    "deploy": "electron-builder build --win --publish always"
  },
  "build": {
    "asar": false,
    "appId": "com.test.update-test",
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "mitoconcrete",
      "repo": "update_test2",
      "publishAutoUpdate": true
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/",
      "app": "."
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mitoconcrete/update_test2.git"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "IMLAB",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "electron-updater": "^4.2.5"
  }
}
